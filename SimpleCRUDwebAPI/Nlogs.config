<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  autoReload="true"
	  internalLogLevel="Trace"
	  internalLogFile="C:\apps\SimpleCRUDwebAPI\SimpleCRUDwebAPI\Logs\internallog\internallog.txt">
	<targets>

		<targets async="true">
			<target name="console" xsi:type="Console" layout="${longdate} ${level:upperCase=true} ${logger}:${callsite-linenumber} - ${scopeproperty:item=requestId} - ${message}" />
		</targets>
		
		
		<target name="logfile" xsi:type="File"
				fileName="C:\apps\SimpleCRUDwebAPI\SimpleCRUDwebAPI\Logs\${shortdate}logfile.txt"
				layout="${longdate} ${level:uppercase=true} ${message}"/>





<target xsi:type="Database"
 name="dbTarget"
connectionString ="${configsetting:item=ConnectionStrings.DefaultConnection}"
dbProvider = "Microsoft.Data.SqlClient.SqlConnection, Microsoft.Data.SqlClient"
		commandText="INSERT INTO logs(date,level,message,machineName,logger) VALUES (@date,@level,@message,@machineName,@logger)">
			<parameter name="@date" layout="${longdate}" dbtype="DateTime" />
			<parameter name="@level" layout="${level}" />
			<parameter name="@message" layout="${message}" />
			<parameter name="@machineName" layout="${machineName}" />
			<parameter name="@logger" layout="${logger}" />
		</target>
		
		
	</targets>
	<rules>
		<logger name="*" minlevel="Trace" writeTo="console"  />
		<logger name="*" minlevel="Trace" writeTo="logfile" />
		<logger name="*" minlevel="Error" writeTo="dbTarget" />
		
	</rules>
</nlog>