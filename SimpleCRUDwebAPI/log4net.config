<?xml version="1.0" encoding="utf-8" ?>
<log4net>
	<appender name="AdoNetAppender" type="log4net.Appender.AdoNetAppender">
		<bufferSize value="1" />
		<connectionType value="System.Data.SqlClient.SqlConnection, System.Data, Version=1.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" />
		<connectionStringName value="ProductDb" />

		<!-- Updated commandText for logging messages -->

		<commandText value="INSERT INTO Log (Id, MethodName, StartTime, EndTime, Status) VALUES (@Id,@MethodName, @StartTime, @EndTime, @Status)" />


		<!-- Parameters for the log message data -->
		<parameter>
			<parameterName value="@Id" />
			<dbType value="Int32" />
			<layout type="log4net.Layout.RawPropertyLayout">
				<key value="log4net:log4net" />
				<conversionPattern value="%property{log4net:log4net}" />
			</layout>
		</parameter>

		<!-- Parameter for MethodName -->
		<parameter>
			<parameterName value="@MethodName" />
			<dbType value="String" />
			<size value="255" />
			<layout type="log4net.Layout.PatternLayout">
		
				<conversionPattern value="%property{MethodName}" />
			</layout>
		</parameter>

		<!-- Parameter for StartTime -->
		<parameter>
			<parameterName value="@StartTime" />
			<dbType value="DateTime" />
			<layout type="log4net.Layout.RawTimeStampLayout" />
		</parameter>

		<!-- Parameter for EndTime -->
		<parameter>
			<parameterName value="@EndTime" />
			<dbType value="DateTime" />
			<layout type="log4net.Layout.RawTimeStampLayout" />
		</parameter>

		<!-- Parameter for Status -->
		<parameter>
			<parameterName value="@Status" />
			<dbType value="String" />
			<size value="50" />
			<layout type="log4net.Layout.PatternLayout">
				
				<conversionPattern value="%property{Status}" />
			</layout>
		</parameter>
	</appender>
	<!-- Add other appenders and loggers as necessary -->
</log4net>
