<?xml version="1.0" encoding="utf-8" ?>
<log4net>

	<root>
		<level value="DEBUG" />
		<!-- Reference the appender you defined -->
		<appender-ref ref="AdoNetAppender" />
		<!-- Reference the appender you defined -->
		<appender-ref ref="FileAppender" />
		
	</root>

	<!--File  -->

	<appender name="FileAppender" type="log4net.Appender.FileAppender">
		<file value="C:\apps\SimpleCRUDwebAPI\SimpleCRUDwebAPI\log.txt" />
		<appendToFile value="true" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
		</layout>
	</appender>

	<!--Database  -->
	<appender name="AdoNetAppender" type="log4net.Appender.AdoNetAppender">
		<bufferSize value="1" />
		<connectionType value="System.Data.SqlClient.SqlConnection, System.Data" />
		<!--<connectionStringName value="DefaultConnection" /> -->
		<connectionStringName value="Server=DESKTOP-DA44SDH;Initial Catalog=ProductDb;User ID=pramod;Password=pramodcn@123;Integrated security = true;" />

		<!-- Updated commandText for logging messages -->

		<commandText value="INSERT INTO Logger ([Id], [MethodName], [StarTime], [EndTime], [Status]) VALUES (@Id,@MethodName, @StarTime, @EndTime, @Status)" />
		<commandText value="Text"/>

		<!-- Parameters for the log message data -->
		<parameter>
			<parameterName value="@Id" />
			<dbType value="Int32" />
			<layout type="log4net.Layout.RawPropertyLayout">
				<key value="log4net:log4net" />
				<conversionPattern value="%property{log4net:log4net}" />
			</layout>
		</parameter>

		<!-- Parameter for MethodName -->
		<parameter>
			<parameterName value="@MethodName" />
			<dbType value="String" />
			<size value="255" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%property{MethodName}" />
			</layout>
		</parameter>

		<!-- Parameter for StartTime -->
		<parameter>
			<parameterName value="@StarTime" />
			<dbType value="DateTime" />
			<layout type="log4net.Layout.RawTimeStampLayout" />
		</parameter>

		<!-- Parameter for EndTime -->
		<parameter>
			<parameterName value="@EndTime" />
			<dbType value="DateTime" />
			<layout type="log4net.Layout.RawTimeStampLayout" />
		</parameter>

		<!-- Parameter for Status -->
		<parameter>
			<parameterName value="@Status" />
			<dbType value="String" />
			<size value="50" />
			<layout type="log4net.Layout.PatternLayout">
				
				<conversionPattern value="%property{Status}" />
			</layout>
		</parameter>
	</appender>
	
</log4net>
